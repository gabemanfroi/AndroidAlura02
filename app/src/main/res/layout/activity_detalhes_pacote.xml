<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetalhesPacoteActivity">

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:scaleType="centerCrop"
        android:id="@+id/activity_detalhes_pacote_background_image"
        android:layout_width="0dp"
        android:layout_height="140dp"
        tools:src="@drawable/sao_paulo_sp" />

    <TextView
        tools:text="São Paulo"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="@id/activity_detalhes_pacote_background_image"
        app:layout_constraintTop_toBottomOf="@id/activity_detalhes_pacote_background_image"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/activity_detalhes_pacote_destino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="2 dias"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/activity_detalhes_pacote_destino"
        app:layout_constraintTop_toBottomOf="@id/activity_detalhes_pacote_destino"
        android:textSize="16sp"
        android:id="@+id/activity_detalhes_pacote_dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="08/12 - 10/12 de 2017"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/activity_detalhes_pacote_dias"
        app:layout_constraintStart_toStartOf="@id/activity_detalhes_pacote_dias"
        android:id="@+id/activity_detalhes_pacote_periodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="Preço final:"
        app:layout_constraintEnd_toEndOf="@id/activity_detalhes_pacote_total"
        app:layout_constraintBottom_toTopOf="@id/activity_detalhes_pacote_total"
        android:id="@+id/activity_detalhes_pacote_preco_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@android:color/holo_green_dark"
        tools:text="R$249,99"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/activity_detalhes_pacote_periodo"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/activity_detalhes_pacote_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp" />

    <Button
        android:text="Finalizar Compra"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1"
        android:layout_margin="8dp"
        android:id="@+id/activity_detalhes_pacote_botao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>